{
    "extension": 
    {
        "name": "codeEditor",
        "version": "0.0.1",
        "description": "HTML/CSS Code Editor",
        "icon": "icon.png",
        "senders": [
        ],
        "actions": [
					{
                        "name": "load",
                        "title": "Load"
                    }
        ],
		
		"editors":[ 
					{ 
						"fileExtensions": ["html", "css"],
						"editor": "index.html",
						"operations" : {
							   "load" : {
											   "callback" : "IDE.loadFile",
											   "target"    : "webZone" 
							   },
							   "save" : {
											   "callback"  : "IDE.shortcut_plugins_save_save",
											   "target"    : "webZone" 
							   },
							   "getText" : {
											   "callback" : "IDE.getText",
											   "target"    : "webZone" 
							   },
							   "selectByTextOffset" : {
											   "callback"  : "IDE.selectByTextOffset",
											   "target"    : "webZone" 
							   }
                        }
					}
		],
		
        "lifetime": "application_lifetime"
    }
}